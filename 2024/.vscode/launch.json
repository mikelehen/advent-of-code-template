  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}",
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      //"program": "${workspaceFolder}/src/day-2/part2.ts",
      "program": "${file}",
      "args": ["<", "${workspaceFolder}/input1.txt"],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
